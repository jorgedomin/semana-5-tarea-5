#include <iostream>
#include <vector>
int main() {
    std::vector<int> numeros;  // Crear un vector para almacenar los números del 1 al 10
    // Llenar el vector con los números del 1 al 10
    for (int i = 1; i <= 10; ++i) {
        numeros.push_back(i);
    }
    std::cout << "Números del 1 al 10 en orden inverso:" << std::endl; // Mostrar los números en orden inverso separados por comas
    for (int i = numeros.size() - 1; i >= 0; --i) {
        std::cout << numeros[i];
        if (i > 0) {
            std::cout << ", ";
        }
    }
    std::cout << std::endl;
    return 0;
}
